@model IEnumerable<BeSpokedBikes.Models.SalesListModel>

@{
    ViewBag.Title = "View Sales";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<h2>View Sales</h2>

<script>
    $(document).ready(function () {
        $("#filterBtn").click(function () {
            window.location.href = "/Home/ViewSales?beginDate=" + $("#beginDate").val() + "&endDate=" + $("#endDate").val();
        });
    });
    
</script>

<div>
    <div>
        <div class="col-lg-3">
            <label>Begin date</label>
            <input class="form-control text-box single-line" type="date" id="beginDate" />
        </div>
        <div class="col-lg-3">
            <label>End date</label>
            <input class="form-control text-box single-line" type="date" id="endDate" />
        </div>

        <div class="col-lg-3">
            <input type="submit" class="btn btn-default" id="filterBtn" value="Submit" style="margin-top: 25px;">
        </div>
    </div>
</div>


<div style="padding-top:70px;">
    <p>
        @Html.ActionLink("Create New", "CreateSale")
    </p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Style)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerLName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaleDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesPersonFName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesPersonLName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Commission)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerFName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerLName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesPersonFName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesPersonLName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commission)
            </td>
        </tr>
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
